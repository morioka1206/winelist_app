
  <div class="contents row">
  <div class="container">
    <h3>登録する</h3>
    <%= form_with(model: @rwine_winary,url: redwines_path, local: true) do |form| %>
      <div class="form_label">ワイン名</div>
      <%= form.text_field :winename, placeholder: "ワイン名" %>
      <%= form.text_field :winename_kana, placeholder: "ワイン名カナ" %>
      <div class="form_label">ワイン生産者</div>
      <%= form.text_field :winaryname, placeholder: "morioka wine" %>
      <%= form.text_field :winaryname_kana, placeholder: "ワイン生産者カナ" %>
      <div class="form_label">ワイン会社名</div>
      <%= form.text_field :name, placeholder: "例 カクヤス" %>
      <div class="form_label">品種</div>
      <%= form.text_field :grapename1, placeholder: "品種1" %>
      <%= form.text_field :grapename2, placeholder: "品種2" %>
      <%= form.text_field :grapename3, placeholder: "品種3" %>
      <%= form.text_field :grapename4, placeholder: "品種4" %>
      <%= form.text_field :grapename5, placeholder: "品種5" %>
      <div class="form_label">仕入れ値</div>
      <%= form.number_field :purchase_price, placeholder: "例：1200" %>
      <div class="form_label">販売価格</div>
      <%= form.text_field :salling_price, placeholder: "例：4000" %>
      <p>写真ファイルをアップロードできます</P>
      <%= form.file_field :image %>
      <div class="form_label">有機栽培か</div>
      <%= form.collection_select :bio_id, Bio.all, :id, :name %>
      <div class="form_label">生産国</div>
      <%= form.collection_select :country_id, Country.all, :id, :name_kana %>
      <div class="form_label">生産地</div>
      <%= form.collection_select :state_id, State.all, :id, :name_kana %>
      <%= form.text_area :comment, placeholder: "例：豊かな果実味と綺麗な酸、アンダルシア地方の特徴が感じられます。", rows: "10" %>
      <div class="form_label">在庫数</div>
      <%= form.number_field :stock, placeholder: "例：1" %>
      <div class="form_label">オンリストしている場合はチェックしてください</div>
      <%= form.check_box :onlist, {}, "true", "false" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>